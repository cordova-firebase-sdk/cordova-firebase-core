{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "classic",
    "outDir": "dist/",
    "rootDir": "src/www/",
    "baseUrl": ".",
    "target": "es5",
    "declaration": true,
    "paths": {
      "cordova-firebase-core": ["./dist/"]
    }
  },
  "exclude": [
    "dist/**",
    "src/**/__test__/*.spec.ts",
    "node_modules/**"
  ],
  "rules": {
    "no-implicit-dependencies": [true, "dev"],
    "array-type": [true, "generic"],
    "max-line-length": [true, 150]
  }
}
