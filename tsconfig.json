{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/npx/",
    "rootDir": "src/",
    "target": "es5",
    "declaration": true
  },
  "exclude": [
    "www",
    "src/**/__test__/*.spec.ts",
    "node_modules"
  ],
  "rules": {
    "no-implicit-dependencies": [true, "dev"]
  }
}
