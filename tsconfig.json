{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "classic",
    "outDir": "dist/",
    "rootDir": "src/www/",
    "baseUrl": "src/www/",
    "target": "es5",
    "declaration": true,
    "lib": ["es5", "es6", "DOM"],
    "sourceMap": true,
  },
  "exclude": [
    "dist/**",
    "src/www/__test__/**",
    "src/www/__mocks__/**",
    "node_modules/**"
  ],
  "rules": {
    "no-bitwise": false,
    "no-implicit-dependencies": [true, "dev"],
    "array-type": [true, "generic"],
    "max-line-length": [true, 150]
  }
}
