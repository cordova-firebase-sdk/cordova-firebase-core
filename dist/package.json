{
  "name": "cordova-firebase-core",
  "version": "0.1.0",
  "description": "",
  "cordova": {
    "id": "cordova-firebase-core",
    "platforms": [
      "android",
      "ios",
      "browser"
    ]
  },
  "scripts": {
    "build": "rm -rf dist && npm run tslint && npx tsc && cp -R package.json plugin.xml README.md js src dist/",
    "test": "npm run jest",
    "tslint": "npx tslint --project .",
    "jest": "npm run tslint && npx jest",
    "jest:watch": "npx jest --watch",
    "tsdoc": "npx typedoc --options typedoc.js src/ts "
  },
  "module": "./src/www/index.js",
  "typings": "./src/www/index.d.ts",
  "files": [
    "src/",
    "js/"
  ],
  "keywords": [
    "ecosystem:cordova",
    "cordova-android",
    "cordova-ios",
    "cordova-browser"
  ],
  "author": "Masashi Katsumata<wf9a5m75@gmail.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/cordova": "0.0.34",
    "@types/es6-promise": "^3.3.0",
    "cordova-js": "^4.2.4",
    "es6-promise": "^4.2.5",
    "@types/jest": "^23.3.7",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.3"
  }
}
